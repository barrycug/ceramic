#!/usr/bin/env ruby
require "rubygems"
require "rack"

$LOAD_PATH << "#{File.dirname(__FILE__)}/../lib"
$LOAD_PATH << "#{File.dirname(__FILE__)}/../vendor"
require "trollop"
require "cover"

options = Trollop::options do
  opt :config, "Configuration file", :type => :string, :required => true
  opt :center, "Initial map center (<lat>,<lon>,<zoom>)", :type => :string
  opt :port, "Port", :type => :integer, :default => 3857
  opt :host, "Host", :type => :string, :default => "0.0.0.0"
end

tileset = eval "Cover::Tileset.build { #{File.read(options[:config])} }"

tileset.setup

Rack::Server.start(
  :app => Cover::Viewer.new(:center => options[:center], :tileset => tileset),
  :Host => options[:host],
  :Port => options[:port]
)

tileset.teardown
